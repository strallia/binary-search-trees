{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "import/prefer-default-export": "off",
    "no-console": "off",
    "no-param-reassign": "off",
    "class-methods-use-this": "off",
    "no-unused-expressions": [
      { "allowTernary": true}
    ]
  }
}
